<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <ImageView
        android:id="@+id/img"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp">
        <TextView
            android:id="@+id/namemovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cám"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/movietype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2D-SUB"/>
            <TextView
                android:id="@+id/moviecode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T18"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_next"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/namecinema"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Glaxy Nguyễn Du"/>
            <TextView
                android:id="@+id/roomcinema"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/dartline"
                android:text="Rạp 2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/timemovie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11:00"/>
            <TextView
                android:id="@+id/datemovie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/dartline"
                android:text="Thứ 5, 26/09/2024"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>