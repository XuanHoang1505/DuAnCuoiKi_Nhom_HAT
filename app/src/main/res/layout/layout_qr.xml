<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cam" />

        <TextView
            android:id="@+id/namemovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cám"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="8dp"/>

        <TextView
            android:id="@+id/movietype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2D - SUB"
            android:textSize="14sp"
            android:paddingTop="4dp"
            android:textColor="#FF6F00"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cinema"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="Galaxy Nguyễn Du"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="Rạp 2"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/giochieu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="11:00"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/ngaychieu"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="26/09/2024"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/qrcode"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/qr"
            android:layout_gravity="center"
            android:paddingTop="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ghế: "
                android:textSize="16sp"
                android:paddingTop="16dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/seat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="H10,H11"
                android:textSize="16sp"
                android:paddingTop="16dp"
                android:textStyle="bold"/>
        </LinearLayout>


        <TextView
            android:id="@+id/combo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iCombo 1 Big Extra STD"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:textStyle="bold"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã vé: "
                android:textSize="14sp"
                android:paddingTop="8dp"/>
            <TextView
                android:id="@+id/ticketcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 764341"
                android:textSize="14sp"
                android:paddingTop="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm thưởng: "
                android:textSize="14sp"
                android:paddingTop="4dp"/>
            <TextView
                android:id="@+id/ticketstar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textSize="14sp"
                android:paddingTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng cộng: "
                android:textSize="14sp"
                android:paddingTop="4dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="219,000"
                android:textSize="14sp"
                android:paddingTop="4dp"
                android:textStyle="bold"/>
        </LinearLayout>


        <Button
            android:id="@+id/btn_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đóng"
            android:layout_marginTop="16dp"
            android:background="@color/orange"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</ScrollView>