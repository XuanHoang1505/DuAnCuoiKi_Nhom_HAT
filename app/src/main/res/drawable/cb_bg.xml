<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi được chọn -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="#FFA500"/> <!-- Màu nền khi được chọn -->
            <size android:width="24dp" android:height="24dp" /> <!-- Kích thước checkbox -->
        </shape>
    </item>

    <!-- Trạng thái khi không được chọn -->
    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF"/> <!-- Màu nền khi không được chọn -->
            <stroke android:width="2dp" android:color="#FFA500"/> <!-- Viền màu cam -->
            <size android:width="24dp" android:height="24dp" /> <!-- Kích thước checkbox -->
        </shape>
    </item>
</selector>
