<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Đặt màu nền cho EditText -->
    <solid android:color="@color/white">
    </solid>

    <!-- Thiết lập viền cho EditText -->
    <stroke
        android:width="1dp"
        android:color="#444445"/>

    <!-- Bo tròn các góc của EditText -->
    <corners android:radius="5dp"/>
    <!-- Padding bên trong EditText -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>

</shape>