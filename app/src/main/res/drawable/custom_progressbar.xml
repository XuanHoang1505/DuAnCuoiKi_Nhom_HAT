<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background of ProgressBar -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="#E0E0E0" /> <!-- Màu nền thanh -->
        </shape>
    </item>

    <!-- Progress of ProgressBar -->
    <item>
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="10dp" />
                <gradient
                    android:startColor="#FFA726"
                    android:endColor="#FB8C00"
                    android:angle="270" /> <!-- Hiệu ứng gradient -->
            </shape>
        </clip>
    </item>

</layer-list>
